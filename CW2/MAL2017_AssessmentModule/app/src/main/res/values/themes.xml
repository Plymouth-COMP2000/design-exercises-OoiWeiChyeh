<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.MAL2017_AssessmentModule" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_brown</item>
        <item name="colorSecondaryVariant">@color/primary_brown</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_brown</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background_primary</item>
    </style>

    <!-- Application theme -->
    <style name="Theme.MAL2017_AssessmentModule" parent="Base.Theme.MAL2017_AssessmentModule" />

    <!-- NoActionBar theme -->
    <style name="Theme.MAL2017_AssessmentModule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>